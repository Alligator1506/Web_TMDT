@page
@model ShoeStore.Pages.Admin.Product.CreateModel
@{
    Layout = null;
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<br />
<h2>Create product</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="post">
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.productEntity.Name">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Quantity</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="quantity" value="@Model.productEntity.Quantity">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Thumbnail</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="thumbnail" value="@Model.productEntity.Thumbnail">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Price</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="price" value="@Model.productEntity.Price">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Color</label>
		<div class="col-sm-6">
			<select name="color" class="form-control">
				@foreach (var item in Model.colorList)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Category</label>
		<div class="col-sm-6">
			<select name="category" class="form-control">
				@foreach (var item in Model.categoryList)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm3 col-form-label">Size</label>
		<div class="col-sm-6">
			<select name="size" class="form-control">
				@foreach (var item in Model.sizeList)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
		</div>
	</div>
	@*button submit và cancel*@
	<div class="row mt-3">
		<div class="col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/admin/product" role="button">Cancel</a> @*Cancel thì trở về trang
			/Clients/index*@
		</div>
	</div>
</form>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
